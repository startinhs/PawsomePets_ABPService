@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        @if (SelectedMediaStorages.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (AllMediaStoragesSelected)
                {
                    <p class="lead mb-0">
                        @L["AllItemsAreSelected", TotalCount]
                    </p>
                }
                else
                {
                    <p class="lead mb-0">
                        @if (SelectedMediaStorages.Count > 1)
                        {
                            @L["NumberOfItemsOnThisPageAreSelected", SelectedMediaStorages.Count]
                        }
                        else
                        {
                            @L["OneItemOnThisPageIsSelected"]
                        }
                    </p>
                }
                    
                <div>
                    @if ((SelectedMediaStorages.Count == PageSize || SelectedMediaStorages.Count == MediaStorageList.Count) && TotalCount > SelectedMediaStorages.Count)
                    {
                        if (!AllMediaStoragesSelected)
                        {
                            <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                        }
                        else
                        {
                            <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                        }
                    }
                    
                    <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedMediaStoragesAsync">
                        <Icon Name="@IconName.Delete" /> @L["Delete"]
                    </Button>
                </div>
            </div>
            
            <hr class="my-1 mx-0"/>
        }
        <DataGrid TItem="MediaStorageDto"
                  Data="MediaStorageList"
                  
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedMediaStorages"
                  RowSelectable="@((args) => CanDeleteMediaStorage)"
                  SelectedRowsChanged="SelectedMediaStorageRowsChanged"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                @if (CanDeleteMediaStorage && MediaStorageList.Any())
                {
                    <DataGridMultiSelectColumn TItem="MediaStorageDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridEntityActionsColumn TItem="MediaStorageDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="MediaStorageDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="MediaStorageDto"
                                          Visible="@CanEditMediaStorage"
                                          Clicked="async () => await OpenEditMediaStorageModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="MediaStorageDto"
                                          Visible="@CanDeleteMediaStorage"
                                          Clicked="() => DeleteMediaStorageAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="MediaStorageDto"
                      Field="FileName"
                      Caption="@L["FileName"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="FileUrl"
                      Caption="@L["FileUrl"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="Description"
                      Caption="@L["Description"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="FileType"
                      Caption="@L["FileType"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="FileSize"
                      Caption="@L["FileSize"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="IsMain"
                      Caption="@L["IsMain"]">
                    <DisplayTemplate>
                        @if (context.IsMain)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>


              <DataGridColumn TItem="MediaStorageDto"
                      Field="ProviderName"
                      Caption="@L["ProviderName"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="ContainerName"
                      Caption="@L["ContainerName"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="EntityId"
                      Caption="@L["EntityId"]">
              </DataGridColumn>

              <DataGridColumn TItem="MediaStorageDto"
                      Field="EntityType"
                      Caption="@L["EntityType"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

