@page "/"
@inherits PawsomePetsComponentBase

<div class="row mb-3">
    <div class="col-xl-6 col-12 d-flex">
        <div class="card h-lg-100 w-100 overflow-hidden">
            <div class="card-body">
                <div class="starting-content pe-5">
                    @if (!CurrentUser.IsAuthenticated)
                    {
                        <h3>@L["Welcome"]</h3>
                        <p class="lead text-muted mb-2">
                            Welcome to PawsomePets, an AI-powered application utilizing transfer learning with Google's Inception V3 model and TensorFlow. Built with ABP .NET Core 9.0 and Flask for the backend, Blazor WebApp for the frontend, MongoDB as the database, it follows a DDD layered architecture and other.
                        </p>
                        <a @onclick="Login" class="btn btn-primary mb-4">
                            <i class="fa-solid fa-right-to-bracket me-1"></i>
                            <span>@L["Login"]</span>
                        </a>
                    }

                    <h4>Developer Resources</h4>
                    <p class="text-muted mb-2">
                        Learn how to integrate our API with sample code and tutorials.
                    </p>
                    <a href="https://github.com/startinhs/PawsomePets_ABPService"
                       class="btn btn-primary soft mb-2"
                       target="_blank">
                        GitHub Repositories
                    </a>
                </div>
                <img class="card-bg-image" src="/images/getting-started/bg-01.png" alt="Illustrative background image">
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 d-flex">
        <div class="card h-100 overflow-hidden">
            <div class="card-body">
                <h4>Community & Support</h4>
                <p class="text-muted mb-2">Join our developer community to discuss PawsomePets API, share experiences, and get help.</p>
                <a class="btn btn-primary btn-brand soft mb-3" href="https://discord.gg/pawsomepets" target="_blank">Join Our Discord</a>
            </div>
            <img class="mt-3" src="/images/getting-started/img-community.png">
        </div>
    </div>
    <div class="col-xl-3 col-lg-4">
        <div class="card">
            <div class="card-header">
                <div class="card-title text-body">PawsomePets Resources</div>
            </div>
            <div class="card-body pt-0">
                <table class="table mb-0">
                    <tbody>
                        <tr>
                            <td class="ps-0 d-flex">
                                <div class="rounded-circle me-2 flex-center bg-brand soft" style="width: 20px; height: 20px;"><i class="bi bi-check fs-4"></i></div>
                                <div> API Reference </div>
                            </td>
                            <td class="text-end pe-0 opacity-25">
                                <a href="/swagger/index.html" target="_blank">
                                    <i class="bi bi-box-arrow-up-right text-dark"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-0 d-flex">
                                <div class="rounded-circle me-2 flex-center bg-brand soft" style="width: 20px; height: 20px;"><i class="bi bi-check fs-4"></i></div>
                                <div> Sample Projects </div>
                            </td>
                            <td class="text-end pe-0 opacity-25">
                                <a href="https://github.com/startinhs" target="_blank">
                                    <i class="bi bi-box-arrow-up-right text-dark"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="card-title text-body">Follow us on Social Media</div>
            </div>
            <div class="card-body pt-0">
                <table class="table mb-0">
                    <tbody>
                        <tr>
                            <td class="ps-0 d-flex">
                                <img src="/images/getting-started/x-white.svg" class="me-2" style="background-color: black;">
                                <div>X.com</div>
                            </td>
                            <td class="text-end pe-0 opacity-25">
                                <a href="https://twitter.com/pawsomepets" target="_blank">
                                    <i class="bi bi-box-arrow-up-right text-dark"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-0 d-flex">
                                <img src="/images/getting-started/instagram.svg" class="me-2" style="background-color: black;">
                                <div>Instagram</div>
                            </td>
                            <td class="text-end pe-0 opacity-25">
                                <a href="https://instagram.com/_statinhs" target="_blank">
                                    <i class="bi bi-box-arrow-up-right text-dark"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-0 d-flex">
                                <img src="/images/getting-started/youtube.svg" class="me-2">
                                <div>YouTube</div>
                            </td>
                            <td class="text-end pe-0 opacity-25">
                                <a href="https://www.youtube.com/startinhs" target="_blank">
                                    <i class="bi bi-box-arrow-up-right text-dark"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
